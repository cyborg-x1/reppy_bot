<?xml version="1.0"?>
<robot xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
       xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
       xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface"
       xmlns:xacro="http://ros.org/wiki/xacro">

<xacro:include filename="$(find reppy_bot_urdf)/urdf/consts.xacro"/>	

	
<xacro:macro name="cam" params="
	 							id
								parent_link
								x y z roll pitch yaw
								always_on
								topic_video_name
								topic_camera_info
								frame_name
								image_width
								image_height
								image_format
								clip_near
								clip_far
								noise_type
								noise_mean
								noise_std_dev
								fov
								hack_baseline
								dist_K1
								dist_K2
								dist_K3
								dist_T1
								dist_T2
								update_rate
	                            ">
	
<link name="camera${id}_link">
	<visual>
		<origin xyz="0 0 0" 
		        rpy="0 0 0"/>
		<geometry>
			<box size="0.02 0.02 0.02" />
		</geometry>
		<material name="Gazebo/FlatBlack">
			<color rgba="0.0 0.0 0.0 1.0"/>
		</material>
	</visual>
	
	<collision>
		<origin xyz="0 0 0" 
		        rpy="0 0 0"/>
		<geometry>
			<box size="0.02 0.02 0.02" />
		</geometry>
	</collision>
</link>

<joint name="camera${id}_joint" type="fixed">
	<origin xyz="${x} ${y} ${z}" rpy="${roll} ${pitch} ${yaw}"/>
	<parent link="${parent_link}"/>
	<child link="camera${id}_link"/>
</joint>

<gazebo reference="camera${id}_link">
	<sensor type="camera" name="camera${id}">
		<update_rate>${update_rate}</update_rate>
		<camera name="camera${id}_head">
			<horizontal_fov>${fov}</horizontal_fov>
			<image>
				<width>${image_width}</width>
				<height>${image_height}</height>
				<format>${image_format}</format>
			</image>
			<clip>
				<near>${clip_near}</near>
				<far>${clip_far}</far>
			</clip>
			<noise>
				<type>${noise_type}</type>
				<mean>${noise_mean}</mean>
				<stddev>${noise_std_dev}</stddev>
			</noise>
		</camera>
		<plugin name="camera_sensor" filename="libgazebo_ros_camera.so">
			<alwaysOn>${always_on}</alwaysOn>
			<updateRate>${update_rate}</updateRate>
			<cameraName>camera${id}</cameraName>
			<imageTopicName>${topic_video_name}</imageTopicName>
			<cameraInfoTopicName>${topic_camera_info}</cameraInfoTopicName>
			<frameName>${frame_name}</frameName>
			<hackBaseline>${hack_baseline}</hackBaseline>
			<distortionK1>${dist_K1}</distortionK1>
			<distortionK2>${dist_K2}</distortionK2>
			<distortionK3>${dist_K3}</distortionK3>
			<distortionT1>${dist_T1}</distortionT1>
			<distortionT2>${dist_T2}</distortionT2>
		</plugin>
	</sensor>
</gazebo><!---->
</xacro:macro>
</robot>
